@model RestaurantBookingSystemOfficial.Pages.Guests.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].BookingSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].Booking_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Guest) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Booking_date)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
